@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>@Model.Name's Clients</h2>

@if (@Model.Clients.Count == 0)
{
  <h3>No current clients</h3>
}

<ul>
  @foreach (Client client in Model.Clients)
  {
    <li>@client.Name</li>
    <ul>
      <li>@Html.ActionLink("Delete", "Delete", "Clients", new { id = client.ClientId }) | @Html.ActionLink("Edit", "Edit", "Clients", new { id = client.ClientId })</li>
    </ul>
  }
</ul>  

<hr />
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)<h3>
<p>@Html.ActionLink("Add a client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back to stylists", "Index")</p>