@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>You have not entered any stylists</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}: {stylist.Specialty}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

@if (@Model.Count != 0)
{
  <p>@Html.ActionLink("Add new client", "Create", "Clients")</p>
} 
<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>