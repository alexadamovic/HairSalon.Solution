@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Client

<h4>Add a new client</h4>

@if (@Model.Clients.Count == 0)
{
  <h3>No current stylists; please add first stylist before first client</h3>
}

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client"/>
}
<p>@Html.ActionLink("Back to Stylists", "Stylists", "Index")</p>